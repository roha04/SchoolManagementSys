<Window x:Class="WPFScholifyApp.Presentation.CreateSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFScholifyApp.Presentation"
        mc:Ignorable="d"
        Title="Створити предмет" Height="231" Width="500" Background="DarkBlue">
    <Grid Margin="0,0,0,-6">
        <StackPanel Margin="0,0,0,15" Grid.ColumnSpan="2">
            <Label Width="92" Content="Назва предмету" Foreground="White"/>
            <TextBox x:Name="SubjectName" Width="385" />
            <Label Width="92" Content="Клас" HorizontalContentAlignment="Center" Foreground="White"/>
            <ComboBox x:Name="ClassComboBox" Width="150" Foreground="DarkBlue" Background="White" RenderTransformOrigin="0.513,0.619" ItemsSource="{Binding cbItems}"/>
            <Button Click="SaveSubject" Content="Додати" Height="30" Width="385" Background="White" Margin="0,20,0,15"/>
            <Button Click="Cancel" Content="Відмінити" Height="30" Width="385" Background="White"/>
        </StackPanel>
    </Grid>
</Window>
