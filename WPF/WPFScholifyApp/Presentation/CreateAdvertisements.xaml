<Window x:Class="WPFScholifyApp.Presentation.CreateAdvertisements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFScholifyApp.Presentation"
        mc:Ignorable="d"
        Title="Створити оголошення" Height="331" Width="456" Background="DarkBlue">
    <Grid Margin="0,0,0,-218">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,195">
            <Label Width="117" Content="Тема Оголошення" Foreground="White"/>
            <TextBox x:Name="Name1" Width="385"/>
            <Label Width="121" Content="Вміст Оголошення" Foreground="White"/>
            <TextBox x:Name="Description" Width="385" Height="120"/>
            <Label/>
            <Button Click="Save" Content="Додати Оголошення" Height="36" Width="385" Background="White"/>
            <Label Height="18" RenderTransformOrigin="0.5,0.5" Width="385"/>
            <Button Click="Cancel" Content="Відмінити" Height="30" Width="385" Background="White"/>
        </StackPanel>
    </Grid>
</Window>
